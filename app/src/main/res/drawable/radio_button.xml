<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true"
        >
        <shape>
            <solid
                android:color="#FF0099"
                >
            </solid>
            <corners
                android:radius="5dp">
            </corners>

        </shape>
    </item>

    <item
        android:state_pressed="false"
        >
        <shape>
            <stroke
                android:width="2dp"
                android:color="#FF0099">

            </stroke>

            <corners
                android:radius="5dp">
            </corners>

        </shape>
    </item>
</selector>